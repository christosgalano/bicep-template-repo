extends: default

rules:
  indentation:
    spaces: 2
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
  hyphens:
    max-spaces-after: 1
  trailing-spaces: enable
  new-line-at-end-of-file: enable
  line-length:
    max: 100
    level: warning
  comments:
    require-starting-space: true
    ignore-shebangs: true
    min-spaces-from-content: 2
  comments-indentation: {}
  truthy: enable
  key-duplicates: enable
